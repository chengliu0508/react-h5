<view class="userinfo">
  <mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
  <mp-form title="注册账号" id="form" rules="{{rules}}" models="{{formData}}">
      <mp-cell prop="salerName" title="名字" ext-class="">
        <input value="{{formData.salerName}}" bindinput="formInputChange" data-field="salerName"
          class="weui-input" placeholder="请输入名字" />
          <view slot="footer" class="weui-vcode-btn">
          <button class="getinfo-btn" bindtap="getUserProfile" type="default" size="mini"> 获取名字 </button>
        </view>
      </mp-cell>
      <mp-cell prop="salerCompany" title="公司" ext-class="weui-cell_vcode">
        <view class="weui-cell weui-cell_select">
                <view class="weui-cell__bd">
                    <picker bindchange="bindAccountChange" value="{{accountIndex}}" range="{{companylistoptions}}">
                        <view class="weui-select" style="text-align:left;">{{companylistoptions[accountIndex]}}</view>
                    </picker>
                </view>
            </view>
      </mp-cell>
  </mp-form>
  <view class="weui-btn-area">
      <button class="weui-btn" type="primary" bindtap="submitForm">确定</button>
  </view>
</view>